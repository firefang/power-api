<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.firefang.power.server.mapper.IUserAuthMapper">
    <sql id="table">t_user_auth</sql>
    <sql id="cols">`id`, `username`, `passwd`, `token_key`</sql>

    <resultMap type="UserAuthDO" id="userAuthMap">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="passwd" property="password" />
        <result column="token_key" property="tokenKey" />
    </resultMap>

    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO <include refid="table" /> (`username`, `passwd`) VALUES (#{username}, #{password});
    </insert>

    <delete id="deleteById">
        DELETE FROM <include refid="table" /> WHERE `id` = #{id};
    </delete>

    <update id="updateById">
        UPDATE <include refid="table" /> SET `passwd` = #{password}, `token_key` = #{tokenKey}
        WHERE `id` = #{id};
    </update>

    <select id="findOneById" resultMap="userAuthMap">
        SELECT <include refid="cols" /> FROM <include refid="table" />
        WHERE `id` = #{id};
    </select>

    <select id="findByUsername" resultMap="userAuthMap">
        SELECT <include refid="cols" /> FROM <include refid="table" />
        WHERE `username` = #{username};
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(0) FROM <include refid="table" />
        WHERE `id` in
        <foreach collection="collection" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>
</mapper>