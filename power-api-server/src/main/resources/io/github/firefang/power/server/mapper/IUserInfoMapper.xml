<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.firefang.power.server.mapper.IUserInfoMapper">
    <sql id="table">t_user_info</sql>
    <sql id="cols">`id`, `nickname`, `email`</sql>

    <resultMap type="UserInfoDO" id="userInfoMap">
        <id column="id" property="id" />
        <result column="nickname" property="nickname" />
        <result column="email" property="email" />
    </resultMap>

    <insert id="add">
        INSERT INTO <include refid="table" /> (`id`, `nickname`, `email`) VALUES (#{id}, #{nickname}, #{email});
    </insert>

    <delete id="deleteById">
        DELETE FROM <include refid="table" /> WHERE `id` = #{id};
    </delete>

    <update id="updateById">
        UPDATE <include refid="table" /> SET `nickname` = #{nickname}, `email` = #{email}
        WHERE `id` = #{id};
    </update>

    <select id="findOneById" resultMap="userInfoMap">
        SELECT <include refid="cols" /> FROM <include refid="table" />
        WHERE `id` = #{id};
    </select>

    <select id="findByNickname" resultMap="userInfoMap">
        SELECT <include refid="cols" /> FROM <include refid="table" />
        WHERE `nickname` = #{nickname};
    </select>
</mapper>